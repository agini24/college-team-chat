{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node@2.15.10" },
    { "src": "index.html",   "use": "@vercel/static" },
    { "src": "public/**",    "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)",     "dest": "/index.html" }
  ]
}
